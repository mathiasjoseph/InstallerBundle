<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Miky\Bundle\InstallerBundle\Command\InstallationCommand"
                 id="miky_installer.command.installation">
            <argument type="service" id="event_dispatcher"/>
            <argument>%miky_installer.model.installation.class%</argument>
            <tag name="console.command"/>
        </service>
        <service class="Miky\Bundle\InstallerBundle\Command\UpdateCommand"
                 id="miky_installer.command.update">
            <argument type="service" id="event_dispatcher"/>
            <argument>%miky_installer.model.installation.class%</argument>
            <tag name="console.command"/>
        </service>
    </services>
</container>
